mixin stats(lang)
    section.section__spacer
        if lang == 'de'
            .section__title
                h4 Die Statistiken & Zahlen
                p …die unsere Geschichte erzählen.
            .flex.flex--items.section__content.facts__wrapper
                .flex.facts
                    h3 1680
                    h6 Vereine
                .flex.facts
                    h3 30%
                    h6 mehr als eine Lizenz
                .flex.facts
                    .flex
                        .gps__wrapper.flex
                            .gps
                                .pulse
                                .dot
                            h3.gradient#rtUsers -
                    h6 Gerade online
                .flex.facts
                    h3 2299
                    h6 Bewertungen
                .flex.facts
                    h3 1.352.428
                    h6 Anlässe & Termine
            .flex.timeline__wrapper
                .flex.facts.facts--nomargin
                    h3 205.320
                    .timeline__item
                        .timeline__dot
                    h6 Registrierte Mitglieder
                .timeline
                .flex.facts.facts--nomargin
                    h3 106
                    .timeline__item
                        .timeline__dot
                    h6 in 👆🏼 Ländern
                .timeline.timeline--mod
                .flex.facts.facts--nomargin
                    h3 12.300
                    .timeline__item
                        .timeline__dot
                    h6 Senden sich täglich Über 👆🏼 Nachrichten
        else
            .section__title
                h4 The stats and figures
                p …that tell our story.
            .flex.section__content.facts__wrapper
                .flex.facts
                    h3 1680
                    h6 Clubs
                .flex.facts
                    h3 30%
                    h6 more than one license
                .flex.facts
                    .flex
                        .gps__wrapper.flex
                            .gps
                                .pulse
                                .dot
                            h3.gradient#rtUsers -
                    h6 Currently online
                .flex.facts
                    h3 2299
                    h6 Reviews
                .flex.facts
                    h3 1.352.428
                    h6 Meetings & Events
            .flex.timeline__wrapper
                .flex.facts.facts--nomargin
                    h3 205.320
                    .timeline__item
                        .timeline__dot
                    h6 Registered members
                .timeline
                .flex.facts.facts--nomargin
                    h3 106
                    .timeline__item
                        .timeline__dot
                    h6 in 👆🏼 countries
                .timeline.timeline--mod
                .flex.facts.facts--nomargin
                    h3 12.300
                    .timeline__item
                        .timeline__dot
                    h6 send 👆🏼 messages every day