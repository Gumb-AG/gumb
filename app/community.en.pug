include _includes/_global.pug
include _mixins/_extensions/_integrations.pug

doctype html
html(lang="en")
    head
        include _includes/_js.pug
        
        +css()
        +meta('en','Community')
    
    body
        +beacon('en')
        
        header
            +nav('en', 'page', 'dark')

        main
            +integrations(1,20)
            
            section
                .section__title
                    h6 Community
                    h3 Our User Stories
                    p Gumb leaves an impression.
                        br 
                        | Look at what is said about us on the net.

                include _includes/_extensions/_socialmediaposts.pug

            .background--shapes
                section#social
                    .section__inner
                        .section__content.section__content--50.padding-right--100.alignitems--center
                            .section__title.section__title--ltr
                                h6 Social Media
                                h3 Want to share your story with the Gumb community?
                                p Reach and connect with the community and let us know how our apps are helping you and your team.
                                b.nebula.padding-top We are happy when you connect with us!
                                br
                                br
                                a.nav__navigation__item.nav__navigation__item--dark.nav__navigation__item--cta.btn.btn--shadow.startChat Chat with us!
                        .section__content.section__content--50.padding-left--64
                            .section__tube
                                a(href="https://www.facebook.com/gumbapp/" target='_blank')
                                    .tile
                                        ion-icon.fb(name="logo-facebook")
                                        h6.padding-top 1.385 Likes
                                a(href="https://www.instagram.com/gumbapp/" target='_blank')
                                    .tile.margin-top--30
                                        img(src="/assets/vector/icons/insta.svg")
                                        h6.padding-top 9 Subscribers
                            .section__tube
                                a(href="https://www.linkedin.com/company/gumb/" target='_blank').margin-top--55
                                    .tile
                                        ion-icon.li(name="logo-linkedin")
                                        h6.padding-top 3 Follower
                                a(href="https://twitter.com/GumbApp" target='_blank').margin-top--30
                                    .tile
                                        ion-icon.tw(name="logo-twitter")
                                        h6.padding-top 5 Follower
                            .section__tube
                                a(href="https://github.com/jonathanarbely/gumbag" target='_blank')
                                    .tile
                                        ion-icon.gh(name="logo-github")
                                        h6.padding-top 24 Commits
                                a(href="https://www.xing.com/companies/gumbag" target='_blank').margin-top--30
                                    .tile
                                        ion-icon.xi(name="logo-xing")
                                        h6.padding-top 3 Employees
                        

        include /_includes/_endofbody.pug

    +footer('en','bright')