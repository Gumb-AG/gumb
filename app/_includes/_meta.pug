mixin meta(lang, title)

    if title
        title= title + ' | Gumb'
    else
        title Gumb AG
    
    if !lang
        meta(name='description' content='Wir sind Gumb, ein junges Software- Start-up. Wir bauen einzigartige Online- Erlebnisse für Dich und Deine Gruppen!')
        meta(name='keywords' content='Deutsche Stichwörter')
        meta(property='og:description' content='Wir sind Gumb, ein junges Software- Start-up. Wir bauen einzigartige Online- Erlebnisse für Dich und Deine Gruppen!')
        
    else
        meta(name='description' content='We are Gumb, a young software start-up. We build unique online experiences for you and your groups!')
        meta(name='keywords' content='English keywords')
        meta(property='og:description' content='We are Gumb, a young software start-up. We build unique online experiences for you and your groups!')
        
